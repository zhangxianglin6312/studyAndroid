<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/main_item_selector"
    android:layout_height="70dip" >

    <ImageView
        android:id="@+id/iv_taskmanger_icon"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/ic_launcher" />

    <com.zxl.niubixilitysafe.ui.MyTextView
        android:id="@+id/tv_taskmanger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:maxWidth="200dip"
        android:layout_toRightOf="@id/iv_taskmanger_icon"
        android:text="程序名"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_taskmanger_itemmen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_taskmanger_name"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/iv_taskmanger_icon"
        android:text="内存占用"
        android:textColor="#66000000"
        android:textSize="18sp" />

    <CheckBox 
        android:clickable="false"
        android:focusable="false"
        android:id="@+id/cb_taskmanager"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:layout_centerVertical="true"        
        />

</RelativeLayout>