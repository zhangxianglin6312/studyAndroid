<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.zxl.niubixilitysafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#ff6cbd45" >

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="设 置 中 心"
            android:textColor="#ffffff"
            android:textSize="18.0dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >

        <TextView
            android:id="@+id/tv_setting_autoupdate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="自动更新设置"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_setting_autoupdate_stauts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_setting_autoupdate_text"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="3dip"
            android:text="自动更新已经开启"
            android:textColor="#88000000"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/cb_setting_autoupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/list_devider" />
    
    <RelativeLayout
        android:id="@+id/rl_setting_showaddress"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >

        <TextView
            android:id="@+id/tv_setting_showaddress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="归属地提示设置"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_setting_showaddress_stauts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_setting_showaddress_text"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="3dip"
            android:text="归属地显示没有开启"
            android:textColor="#88000000"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/cb_setting_showaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/list_devider" />
    
    <com.zxl.niubixilitysafe.ui.SettingView
        android:id="@+id/sv_setting_blacknumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        itheima:content="开启来电黑名单服务"
        itheima:title="来电黑名单设置" >
    </com.zxl.niubixilitysafe.ui.SettingView>

</LinearLayout>