<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#ff6cbd45" >

        <TextView
            style="@style/text_title_style"
            android:text="3.设置安全号码" />
    </LinearLayout>

    <TextView
        style="@style/text_content_style"
        android:layout_marginLeft="5dip"
        android:text="sim卡更换后:" />

    <TextView
        style="@style/text_content_style"
        android:paddingTop="5dip"
        android:text="报警短信会发送到安全号码上" />

    <EditText
        android:id="@+id/et_setup3_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入或者选择安全号码" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="selectContact"
        android:background="@drawable/button_bg_selector"
        android:text="选择一个联系人" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView style="@style/image_off_style" />

        <ImageView style="@style/image_off_style" />

        <ImageView style="@style/image_on_style" />

        <ImageView style="@style/image_off_style" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center"
            android:src="@drawable/phone" />

        <Button
            style="@style/bt_next_style"
            android:onClick="next" />

        <Button
            style="@style/bt_pre_style"
            android:onClick="pre" />
    </RelativeLayout>

</LinearLayout>