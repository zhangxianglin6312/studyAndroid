<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/main_item_selector"
    android:layout_height="70dip" >

    <ImageView
        android:id="@+id/iv_appmanger_icon"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_appmanger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@id/iv_appmanger_icon"
        android:text="程序名"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_appmanger_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_appmanger_name"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/iv_appmanger_icon"
        android:text="版本名"
        android:textColor="#66000000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_appmanager"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>