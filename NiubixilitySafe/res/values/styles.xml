<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    
        <style name="text_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20.0sp</item>
    </style>

    <style name="text_content_style" parent="@style/text_title_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ee000000</item>
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="image_on_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:src">@android:drawable/presence_online</item>
    </style>

    <style name="image_off_style" parent="@style/image_on_style">
        <item name="android:src">@android:drawable/presence_invisible</item>
    </style>

    <style name="bt_next_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/button_bg_selector</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:text">下一步</item>
    </style>

    <style name="bt_pre_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/button_bg_selector</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:text">上一步</item>
    </style>

</resources>
